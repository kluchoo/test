{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {},
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "workbench.colorTheme": "Default Dark Modern",
        "latex-workshop.latex.recipe.default": "lastUsed",
        "latex-workshop.latex.autoClean.run": "onBuilt",
        "latex-workshop.latex.build.rootfileInStatus": true,
        "latex-workshop.linting.chktex.enabled": true,
        "latex-workshop.linting.lacheck.enabled": true,
        "latex-workshop.latex.tools": [
          {
            "name": "GhostScript",
            "command": "gs",
            "args": [
              "-sDEVICE=pdfwrite",
              "-dCompatibilityLevel=1.5",
              "-dNOPAUSE",
              "-dQUIET",
              "-dBATCH",
              "-dPrinted=false",
              "-sOutputFile=%DOCFILE%-compressed.pdf",
              "%DOCFILE%.pdf"
            ]
          },
          {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
              "-interaction=nonstopmode",
              "--shell-escape",
              "-synctex=1",
              "%DOCFILE%"
            ]
          },
          {
            "name": "lualatex-draft",
            "command": "lualatex",
            "args": [
              "-interaction=nonstopmode",
              "--shell-escape",
              "-draftmode",
              "%DOCFILE%"
            ]
          },
          {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
              "--interaction=nonstopmode",
              "--shell-escape",
              "-synctex=1",
              "%DOCFILE%"
            ]
          },
          {
            "name": "pdflatex-draft",
            "command": "pdflatex",
            "args": [
              "--interaction=nonstopmode",
              "--shell-escape",
              "-draftmode",
              "-synctex=1",
              "%DOCFILE%"
            ]
          },
          {
            "name": "biber",
            "command": "biber",
            "args": [
              "%DOCFILE%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "lualatex-draft -> biber -> lualatex*2",
            "tools": [
              "lualatex-draft",
              "biber",
              "lualatex",
              "lualatex",
              "GhostScript"
            ]
          },
          {
            "name": "[Without biber] -> lualatex*2",
            "tools": [
              "lualatex",
              "lualatex",
              "GhostScript"
            ]
          },
          {
            "name": "pdflatex-draft -> biber -> pdflatex-draft -> pdflatex",
            "tools": [
              "pdflatex-draft",
              "biber",
              "pdflatex-draft",
              "pdflatex",
              "GhostScript"
            ]
          },
          {
            "name": "[Without biber] pdflatex-draft -> pdflatex-draft -> pdflatex",
            "tools": [
              "pdflatex-draft",
              "pdflatex-draft",
              "pdflatex",
              "GhostScript"
            ]
          }
        ],
        "[latex]": {
          "editor.defaultFormatter": "James-Yu.latex-workshop"
        },
        "latex-workshop.latex.clean.fileTypes": [
          "*.aux",
          "*.bbl*",
          "*.bbl",
          "*.blg",
          "*.idx",
          "*.ind",
          "*.lof",
          "*.lot",
          "*.out",
          "*.toc",
          "*.acn",
          "*.acr",
          "*.alg",
          "*.glg",
          "*.glo",
          "*.gls",
          "*.fls",
          "*.log",
          "*.fdb_latexmk",
          "*.snm",
          "*.synctex(busy)",
          "*.synctex.gz(busy)",
          "*.nav"
        ],
        "latex-workshop.synctex.afterBuild.enabled": true,
        "latex-workshop.view.pdf.viewer": "tab",
        "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
        "latex-workshop.latex.clean.method": "glob",
        "terminal.integrated.enablePersistentSessions": false,
        "ltex.language": "pl-PL",
        "latex-workshop.hover.preview.enabled": true
      },
      "extensions": [
        "MaciejWojs.MacroTeX",
        "github.vscode-github-actions",
        "GitHub.copilot-chat",
        "MS-CEINTL.vscode-language-pack-pl",
        "aaron-bond.better-comments",
        "usernamehw.errorlens",
        "James-Yu.latex-workshop",
        "tecosaur.latex-utilities",
        "torn4dom4n.latex-support",
        "mathematic.vscode-latex",
        "donjayamanne.git-extension-pack"
      ]
    }
  }
}
